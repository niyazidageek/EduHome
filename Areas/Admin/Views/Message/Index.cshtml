@model List<Message>

<table class="table table-dark">
    <thead>
        <tr>
            <th> Id </th>
            <th> Sender </th>
            <th> Delete </th>
            <th> Details </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var message in Model)
        {
            <tr>
                <td> @message.Id </td>
                <td> @message.Email </td>
                <td> <a asp-action="DeleteMessage" asp-route-id="@message.Id" class="btn btn-danger"> Delete </a> </td>
                <td> <a asp-action="ViewMessage" asp-route-id="@message.Id" class="btn btn-info"> Details </a> </td>
            </tr>
        }
    </tbody>
</table>
