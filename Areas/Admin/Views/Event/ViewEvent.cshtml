@model Event
<div class="row justify-content-center">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create course</h4>
                <div class="forms-sample">
                    <div class="form-group">
                        <span>Id</span>
                        <h1>@Model.Id</h1>
                    </div>
                    <div class="form-group">
                        <span>Name</span>
                        <h3>@Model.Name</h3>
                    </div>
                    <div class="form-group">
                        <span>Description</span>
                        <p>@Model.Description</p>
                    </div>
                    <div class="form-group">
                        <span>Venue</span>
                        <h4>@Model.Venue</h4>
                    </div>
                    <div class="form-group">
                        <span>Start time</span>
                        <p>@Model.StartTime?.ToString("h:mm tt")</p>
                    </div>
                    <div class="form-group">
                        <span>End time</span>
                        <p>@Model.EndTime?.ToString("h:mm tt")</p>
                    </div>
                    <div class="form-group">
                        <span>Categories:</span>
                        @foreach (var eventCategory in Model.EventCategories)
                        {
                            <h5>@eventCategory.Category.Name</h5>
                            <br />
                        }
                    </div>
                    <div class="form-group">
                        <span>Speakers:</span>
                        @foreach (var speakerEvent in Model.SpeakerEvents)
                        {
                            <h5>@speakerEvent.Speaker.Name</h5>
                            <h5>@speakerEvent.Speaker.Position</h5>
                            <img src="~/img/@speakerEvent.Speaker.SpeakerImage.Photo" />
                            <br />
                        }
                    </div>
                    <div class="form-group">
                        <span>Photo</span>
                        <img src="~/img/@Model.EventImage.Photo" />
                    </div>
                    <a asp-action="Index" class="btn btn-light">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>