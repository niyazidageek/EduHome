@model List<NoticeBoardItem>

<a asp-controller="NoticeBoard" asp-action="CreateNoticeBoardItem" class="btn btn-success">Create</a>
<table class="table table-dark">
    <thead>
        <tr>
            <th> Id </th>
            <th> Date </th>
            <th> Delete </th>
            <th> Edit </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var nbitem in Model)
        {
            <tr>
                <td> @nbitem.Id </td>
                <th> @nbitem.Date?.ToString("dd,MMMM yyyy") </th>
                <td> <a asp-action="DeleteNoticeBoardItem" asp-route-id="@nbitem.Id" class="btn btn-danger"> Delete </a> </td>
                <td> <a asp-action="EditNoticeBoardItem" asp-route-id="@nbitem.Id" class="btn btn-primary"> Edit </a> </td>
            </tr>
        }
    </tbody>
</table>
