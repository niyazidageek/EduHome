@model Testimonal

    <table class="table table-dark">
        <thead>
            <tr>
                <th> Fullname </th>
                <th> Position </th>
                <th> Photo </th>
                <th> Edit </th>
                <th> Details </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td> @Model.Fullname </td>
