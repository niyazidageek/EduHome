@model Testimonal
<div class="row justify-content-center">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create course</h4>
                <div class="forms-sample">
                    <div class="form-group">
                        <span>Fullname</span>
                        <h1>@Model.Fullname</h1>
                    </div>
                    <div class="form-group">
                        <span>Position</span>
                        <h3>@Model.Position</h3>
                    </div>
                    <div class="form-group">
                        <span>Text</span>
                        <h4>@Model.Text</h4>
                    </div>
                    <div class="form-group">
                        <span>Photo</span>
                        <img src="~/img/@Model.PersonPhoto" />
                    </div>
                    <a asp-action="Index" class="btn btn-light">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>