@model Blog
<div class="row justify-content-center">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create course</h4>
                <div class="forms-sample">
                    <div class="form-group">
                        <span>Id</span>
                        <h1>@Model.Id</h1>
                    </div>
                    <div class="form-group">
                        <span>Name</span>
                        <h3>@Model.Name</h3>
                    </div>
                    <div class="form-group">
                        <span>Content</span>
                        <h4>@Model.Content</h4>
                    </div>
                    <div class="form-group">
                        <span>Post date</span>
                        <p>@Model.PostDate?.ToString("dd MMMM, yyyy")</p>
                    </div>
                    <div class="form-group">
                        <span>Comments:</span>
                        @foreach (var comment in Model.Comments)
                        {
                            <h5>Publisher: @comment.FullName</h5>
                            <h5>E-mail: @comment.Mail</h5>
                            <h5>Subject: @comment.Subject</h5>
                            <h5>Comment: @comment.Message</h5>
                            <br />
                        }
                    </div>
                    <div class="form-group">
                        <span>Photo</span>
                        <img src="~/img/@Model.BlogImage.Photo" />
                    </div>
                    <a asp-action="Index" class="btn btn-light">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>
