@model BlogVM

<div class="row justify-content-center">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create course</h4>
                <form enctype="multipart/form-data" class="forms-sample" method="post">
                    <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
                    <div class="form-group">
                        <label asp-for="Name">Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Name">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AuthorFullName">Author fullname</label>
                        <input asp-for="AuthorFullName" class="form-control" placeholder="Author fullname">
                        <span class="text-danger" asp-validation-for="AuthorFullName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PostDate">Post Date</label>
                        <input asp-for="PostDate" class="form-control" placeholder="Post Date">
                        <span class="text-danger" asp-validation-for="PostDate"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Content">Content</label>
                        <input asp-for="Content" class="form-control" placeholder="Content">
                        <span class="text-danger" asp-validation-for="Content"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Photo">Photo</label>
                        <input asp-for="Photo" class="form-control" accept="image/*" placeholder="Photo">
                        <span class="text-danger" asp-validation-for="Photo"></span>
                    </div>
                    <div class="form-group">
                        <select class="selectpicker" asp-for="CategoriesInput" asp-items="@(new SelectList(Model.Categories,"Name","Name"))"></select>
                        <label class="form-label select-label">Choose categories</label>
                        <span class="text-danger" asp-validation-for="CategoriesInput"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button asp-action="Index" class="btn btn-light">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>
